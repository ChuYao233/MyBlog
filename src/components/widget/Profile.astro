---
import { Icon } from "astro-icon/components";
import { profileConfig } from "../../config";
import { url } from "../../utils/url-utils";
import ImageWrapper from "../misc/ImageWrapper.astro";

const config = profileConfig;
---
<div class="card-base p-3">
    <a aria-label="Go to About Page" href={url('/about/')}
       class="group block relative mx-auto mt-1 lg:mx-0 lg:mt-0 mb-3
       max-w-[12rem] lg:max-w-none overflow-hidden rounded-xl active:scale-95">
        <div class="absolute transition pointer-events-none group-hover:bg-black/30 group-active:bg-black/50
        w-full h-full z-50 flex items-center justify-center">
            <Icon name="fa6-regular:address-card"
                  class="transition opacity-0 scale-90 group-hover:scale-100 group-hover:opacity-100 text-white text-5xl">
            </Icon>
        </div>
        <ImageWrapper src={config.avatar || ""} alt="Profile Image of the Author" class="mx-auto lg:w-full h-full lg:mt-0 "></ImageWrapper>
    </a>
    <div class="px-2">
        <div class="font-bold text-xl text-center mb-1 dark:text-neutral-50 transition">{config.name}</div>
        <div class="h-1 w-5 bg-[var(--primary)] mx-auto rounded-full mb-2 transition"></div>
        <div class="text-center text-neutral-400 mb-2.5 transition">{config.bio}</div>
        <div class="flex flex-wrap gap-2 justify-center mb-1">
            {config.links.length > 1 && config.links.map(item =>
                    <a rel="me" aria-label={item.name} href={item.url} target="_blank" class="btn-regular rounded-lg h-10 w-10 active:scale-90">
                        <Icon name={item.icon} class="text-[1.5rem]"></Icon>
                    </a>
            )}
            {config.links.length == 1 && <a rel="me" aria-label={config.links[0].name} href={config.links[0].url} target="_blank"
                                            class="btn-regular rounded-lg h-10 gap-2 px-3 font-bold active:scale-95">
                <Icon name={config.links[0].icon} class="text-[1.5rem]"></Icon>
                {config.links[0].name}
            </a>}
        </div>
        <!-- 访客统计 -->
        <div id="visitor-stats" class="mt-3 flex items-center justify-center gap-4 text-sm text-neutral-500 dark:text-neutral-400">
            <div class="flex items-center gap-1.5">
                <Icon name="fa6-regular:user" class="text-base"></Icon>
                <span>访客数:</span>
                <span id="visitor-stats-visitors" class="font-medium cursor-help">-</span>
            </div>
            <div class="flex items-center gap-1.5">
                <Icon name="fa6-regular:eye" class="text-base"></Icon>
                <span>访问量:</span>
                <span id="visitor-stats-views" class="font-medium cursor-help">-</span>
            </div>
        </div>
    </div>
</div>

<script>
    import { initVisitorStats } from '../../utils/visitor-stats';
    
    /**
     * 格式化数字为 k/w 格式
     * @param {number} num - 原始数字
     * @returns {string} 格式化后的字符串
     */
    function formatNumber(num) {
        if (num >= 10000) {
            const w = num / 10000;
            // 如果正好是整数，不显示小数
            if (w % 1 === 0) {
                return `${w}w`;
            }
            return `${w.toFixed(2)}w`;
        } else if (num >= 1000) {
            const k = num / 1000;
            // 如果正好是整数，不显示小数
            if (k % 1 === 0) {
                return `${k}k`;
            }
            return `${k.toFixed(2)}k`;
        }
        return num.toString();
    }
    
    /**
     * 更新统计显示
     * @param {HTMLElement} element - 要更新的元素
     * @param {number} value - 原始数值
     */
    function updateStatDisplay(element, value) {
        if (element) {
            const formatted = formatNumber(value);
            element.textContent = formatted;
            // 添加 title 属性，hover 时显示原始数据
            element.title = value.toLocaleString();
        }
    }
    
    // 初始化访客统计
    (async function() {
        try {
            const stats = await initVisitorStats();
            
            // 更新显示
            const viewsEl = document.getElementById('visitor-stats-views');
            const visitorsEl = document.getElementById('visitor-stats-visitors');
            
            updateStatDisplay(viewsEl, stats.totalViews);
            updateStatDisplay(visitorsEl, stats.uniqueVisitors);
        } catch (error) {
            console.debug('Failed to initialize visitor stats:', error);
        }
    })();
</script>

