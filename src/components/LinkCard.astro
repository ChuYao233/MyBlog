---
import LazyImage from "./misc/LazyImage.astro";

interface Props {
	name: string;
	url: string;
	description?: string;
	avatar?: string;
	class?: string;
	style?: string;
}

const { name, url, description, avatar, class: className, style } = Astro.props;
---


<a
	href={url}
	target="_blank"
	rel="noopener noreferrer"
	class:list={[
		"link-card group card-base flex items-center gap-4 p-6 rounded-[var(--radius-large)] transition-all duration-300 hover:scale-[1.02] hover:shadow-lg active:scale-[0.98]",
		className,
	]}
	style={style}
>
	{avatar && (
		<LazyImage
			src={avatar}
			alt={`${name} 的头像`}
			class="w-16 h-16 rounded-full flex-shrink-0"
			loading="lazy"
		/>
	)}
	<div class="flex-1 min-w-0">
		<h3 class="text-xl font-bold text-90 mb-1 truncate">{name}</h3>
		{description && (
			<p class="text-75 text-sm line-clamp-2">{description}</p>
		)}
	</div>
	<svg
		class="w-6 h-6 text-[var(--primary)] flex-shrink-0 transition-transform duration-300 group-hover:translate-x-1 group-hover:-translate-y-1"
		fill="none"
		stroke="currentColor"
		viewBox="0 0 24 24"
	>
		<path
			stroke-linecap="round"
			stroke-linejoin="round"
			stroke-width="2"
			d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"
		/>
	</svg>
</a>
