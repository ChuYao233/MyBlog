---
import MainGridLayout from "../layouts/MainGridLayout.astro";
import { url } from "../utils/url-utils";
import { siteConfig } from "../config";
import { Icon } from "astro-icon/components";
---

<MainGridLayout title="404 - 页面未找到" description="抱歉，您访问的页面不存在">
    <div class="flex w-full rounded-[var(--radius-large)] overflow-hidden relative min-h-32">
        <div class="card-base z-10 px-9 py-6 relative w-full flex flex-col items-center justify-center text-center">
            <div class="mb-6">
                <Icon name="material-symbols:error-outline-rounded" class="text-8xl text-[var(--primary)] opacity-80" />
            </div>
            <h1 class="text-4xl font-bold mb-4 text-[var(--primary)]">404</h1>
            <p class="text-lg mb-2 text-neutral-700 dark:text-neutral-300">抱歉，您访问的页面不存在</p>
            <p class="text-sm mb-8 text-neutral-500 dark:text-neutral-500">页面可能已被删除或移动</p>
            <a href={url('/')} class="btn-plain scale-animation rounded-lg h-11 px-6 font-bold active:scale-95 inline-flex items-center gap-2">
                <Icon name="material-symbols:home-outline-rounded" class="text-xl" />
                返回首页
            </a>
        </div>
    </div>
</MainGridLayout>

